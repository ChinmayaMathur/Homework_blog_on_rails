<h1>Change Password for User</h1>
<br/>
<%= form_with model:@user, url: "/users/updatePassword", method: :post, local: true do |f| %>
<div>
      <%= f.label :current_password %>
      <%= f.text_field :current_password %>
</div>
<br/>
<div>
      <%= f.label :new_password %>
      <%= f.text_field :new_password %>
</div>
<br/>
<div>
      <%= f.label :new_password_confirmation %>
      <%= f.text_field :new_password_confirmation %>
</div>
<br/>
<%= f.submit "Change Password" %>
<% end %>